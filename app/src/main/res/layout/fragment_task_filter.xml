<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ruireutov.organiser.task.taskFilter.TaskFilterFragmentList">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/show_overdue_filter"
                        android:text="@string/task_filter_show_overdue" />
                    <CheckBox
                        android:id="@+id/show_overdue_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/show_completed_filter"
                        android:text="@string/task_filter_show_completed" />
                    <CheckBox
                        android:id="@+id/show_completed_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:text="@string/task_filter_end_by" />
                    <TextView
                        android:id="@+id/end_by_filter"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:gravity="end"
                        android:maxLines="1"
                        android:hint="@string/task_filter_end_by_hint"
                        android:background="@color/colorDateTime"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/priority_filter_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/priority_filters_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/filter_border"
                        android:padding="5dp"
                        app:alignItems="stretch"
                        app:flexWrap="wrap"
                        app:justifyContent="center" />
                    <TextView
                        android:id="@+id/priority_filters_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:background="@android:color/white"
                        android:paddingEnd="3dp"
                        android:paddingStart="3dp"
                        android:text="@string/task_filter_container_priority" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/priority_category_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/category_filters_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/filter_border"
                        android:padding="5dp"
                        app:alignItems="stretch"
                        app:flexWrap="wrap"
                        app:justifyContent="center" />
                    <TextView
                        android:id="@+id/category_filters_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:background="@android:color/white"
                        android:paddingEnd="3dp"
                        android:paddingStart="3dp"
                        android:text="@string/task_filter_container_category" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
