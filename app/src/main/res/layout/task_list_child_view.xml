<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/task_category_icon"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/work_task_category"/>
    <TextView
        android:id="@+id/task_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/task_category_icon"
        android:minWidth="50dp"
        android:textColor="@android:color/black"/>
    <Button
        android:id="@+id/task_priority_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <TextView
        android:id="@+id/due_time_label"
        android:layout_below="@id/task_title_text"
        android:layout_toEndOf="@id/task_category_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due:"/>
    <TextView
        android:id="@+id/due_time_text"
        android:layout_below="@id/task_title_text"
        android:layout_toEndOf="@id/due_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/time_left_text"
        android:layout_below="@id/task_priority_icon"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>