<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/task_category_icon"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/default_task_category"/>
    <TextView
        android:id="@+id/task_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/task_category_icon"
        android:textSize="28sp"/>
    <TextView
        android:id="@+id/task_priority_icon"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:textSize="25sp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/due_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="3dp"
        android:layout_below="@id/task_category_icon"
        android:layout_alignParentStart="true"
        android:text="@string/task_list_due"
        android:textColor="@color/colorTextHint"/>
    <TextView
        android:id="@+id/due_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/task_category_icon"
        android:layout_toEndOf="@id/due_time_label"
        android:textColor="@color/colorTextHint"/>
    <TextView
        android:id="@+id/time_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_below="@id/task_category_icon"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"/>
</RelativeLayout>