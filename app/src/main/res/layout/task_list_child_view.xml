<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/holo_red_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/delete_task_layout"
        android:layout_width="40dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationX="-40dp">
        <ImageView
            android:id="@+id/delete_task_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete_task_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/task_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/task_priority_indication"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/task_deadline_indication"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/deadlineStatusNormal"
            app:layout_constraintStart_toEndOf="@id/task_priority_indication"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/task_category_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/task_list_category_description"
            app:layout_constraintTop_toBottomOf="@id/task_status_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/task_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingStart="4dp"
            android:paddingEnd="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:text="Task title"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/task_category_icon"
            app:layout_constraintWidth_default="wrap" />
        <TextView
            android:id="@+id/task_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorTextHint"
            android:textSize="12sp"
            android:text="Status text"/>
        <TextView
            android:id="@+id/task_info_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/task_category_icon"
            app:layout_constraintTop_toBottomOf="@id/task_title_text"
            app:layout_constraintBottom_toBottomOf="@id/task_category_icon"
            android:paddingStart="4dp"
            android:paddingEnd="16dp"
            android:textSize="14sp"
            android:textColor="@color/colorTextHint"/>

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/complete_task_layout"
        android:layout_width="40dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationX="40dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:buttonTint="@color/completeColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>

