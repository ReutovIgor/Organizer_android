<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/task_hint_name"
        android:inputType="text"
        android:maxLines="1"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/task_scheduled_checkbox"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/task_hint_time_options" />
    </LinearLayout>
    <TextView
        android:id="@+id/from_date_time_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/task_hint_from"/>
    <LinearLayout
        android:id="@+id/from_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/task_from_date"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorDateTime"
            android:hint="FromDate"></TextView>

        <TextView
            android:id="@+id/task_from_time"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@color/colorDateTime"
            android:gravity="right"
            android:hint="FromTime"
            android:padding="10dp"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/to_date_time_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/task_hint_to"/>
    <LinearLayout
        android:id="@+id/to_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/task_to_date"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorDateTime"
            android:hint="ToDate"></TextView>
        <TextView
            android:id="@+id/task_to_time"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="20dp"
            android:background="@color/colorDateTime"
            android:padding="10dp"
            android:hint="ToTime"></TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/task_hint_priority"/>

    <Spinner
        android:id="@+id/task_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:popupBackground="@color/colorDateTime"
        android:padding="10dp"></Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/task_hint_category"/>

    <Spinner
        android:id="@+id/task_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:popupBackground="@color/colorDateTime"
        android:padding="10dp">

    </Spinner>

    <EditText
        android:id="@+id/task_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:hint="@string/task_hint_details"
        android:inputType="textMultiLine"
        android:maxHeight="250dp"
        android:padding="10dp"
        android:textColorHint="@color/colorTextHint" />

    <Button
        android:id="@+id/task_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="@string/task_button_create"/>

</LinearLayout>